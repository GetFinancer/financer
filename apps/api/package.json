{
  "name": "@financer/api",
  "version": "1.4.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format cjs --out-dir dist --clean",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "reset-password": "tsx src/scripts/reset-password.ts",
    "create-tenant": "tsx src/scripts/create-tenant.ts",
    "admin": "tsx src/scripts/admin.ts"
  },
  "dependencies": {
    "@financer/shared": "workspace:*",
    "@types/qrcode": "^1.5.6",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.0",
    "helmet": "^7.1.0",
    "nodemailer": "^8.0.1",
    "otplib": "^13.1.1",
    "qrcode": "^1.5.4",
    "sql.js": "^1.10.0",
    "stripe": "^20.3.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/node": "^20.11.0",
    "@types/nodemailer": "^7.0.10",
    "@types/sql.js": "^1.4.9",
    "@types/supertest": "^6.0.2",
    "supertest": "^7.0.0",
    "tsup": "^8.5.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^2.1.8"
  }
}
